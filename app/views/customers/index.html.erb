<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 bcustomer-bottom">
  <h1 class="h2">Customers</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Note</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each_with_index do |customer, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= customer.display_name %></td>
          <td><%= customer.email %></td>
          <td><%= customer.phone %></td>
          <td><%= customer.note %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
