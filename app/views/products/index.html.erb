<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 bproduct-bottom">
  <h1 class="h2">Products</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Product Type</th>
        <th>Price Range</th>
        <th>Total Inventory</th>
        <th>Updated At</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each_with_index do |product, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= product.title %></td>
          <td><%= product.product_type %></td>
          <td><%=  money_to_s(product.price_range.min_variant_price) %> - <%=  money_to_s(product.price_range.max_variant_price) %></td>
          <td><%= product.total_inventory %></td>
          <td><%= product.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
